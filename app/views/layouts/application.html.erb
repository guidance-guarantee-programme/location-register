<% content_for :head do %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
<% end %>

<% content_for :navbar_right do %>
  <%= link_to current_user.name, Plek.current.find('signon') %>
  &bull; <%= link_to 'Sign out', gds_sign_out_path %>
<% end %>

<%= content_for :app_title do %>
  CAB Locator
<% end %>

<%= content_for :navbar_items do %>
  <li>
    <a href="/add" class="disabled">Add</a>
  </li>
  <li>
    <a href="/search" class="disabled">Search</a></li>
  <li>
    <a href="/locations">Directory</a>
  </li>

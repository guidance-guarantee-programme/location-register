<div class="row">
  <div class="col-md-12">
    <h1>Locations Directory</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= render partial: 'directory_filter' %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%- if @locations.empty? %>
      <p class="no-content t-notice">No locations available with those filter options.</p>
    <% end %>
    <%- @locations.each do |location| %>
      <div class="row t-location" id="location-<%= location.uid %>">
        <div class="col-md-6">
          <h2 class="inline-block">
            <%= link_to location.title, admin_location_path(location.uid), class: 't-location-title' %>
          </h2>
          <%- if location.booking_location %>
            <span class="label label-primary label--inline">Child location</span>
          <% else %>
            <span class="label label-danger label--inline">Booking location</span>
          <% end %>
          <%= render location %>
        </div>
      </div>
    <% end %>
  </div>
</div>

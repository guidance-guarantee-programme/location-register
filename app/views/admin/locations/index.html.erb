<div class="row">
  <div class="col-md-12">
    <h1>Locations Directory</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= render partial: 'directory_filter' %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%- if @locations.empty? %>
      <p class="no-content t-notice">No locations available with those filter options.</p>
    <% end %>
    <%- @locations.each do |location| %>
      <div class="row t-location" id="location-<%= location.uid %>">
        <div class="col-md-6">
          <h2 class="t-location-title"><%= location.title %></h2>
          <table class="table">
            <tr>
              <td class="location-details-table__fixed-width-column">Address:</td>
              <td class="t-address"><%= location.address.to_a.join('<br>').html_safe %></td>
            </tr>
            <tr>
              <td>Booking hours:</td>
              <td class="t-booking_hours"><%= location.hours %></td>
            </tr>
            <tr>
              <td>Telephone number:</td>
              <td class="t-telephone_number"><%= location.phone %></td>
            </tr>
            <tr>
              <td>Status:</td>
              <td class="t-status">
                <%= render 'status_form', location: location %>
              </td>
            </tr>
            <tr>
              <td>Last updated:</td>
              <td><%= location.created_at %></td>
            </tr>
          </table>
        </div>
      </div>
    <% end %>
  </div>
</div>
